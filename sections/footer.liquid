{% comment %}theme-check-disable UndefinedObject{% endcomment %}
{{ 'section-footer.css' | asset_url | stylesheet_tag }}
{{ 'component-newsletter.css' | asset_url | stylesheet_tag }}
{{ 'component-list-menu.css' | asset_url | stylesheet_tag }}
{{ 'component-list-payment.css' | asset_url | stylesheet_tag }}
{{ 'component-list-social.css' | asset_url | stylesheet_tag }}

<footer
  class="footer color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding bg-black text-white px-[20px] lg:px-[80px] py-[40px]"
>
  <div class="flex flex-col lg:flex-row justify-between gap-[40px] items-center lg:items-start">
    {% comment %} Menu section - responsive {% endcomment %}
    <div class="bg-black text-white px-4 py-6 w-full lg:hidden">
      {% assign titles = 'Shop,Company,Info,Important' | split: ',' %}
      <div class="space-y-4">
        {% for title in titles %}
          <div class="flex items-center justify-between border-b border-gray-700 pb-4">
            <span class="text-base font-medium">{{ title }}</span>
            <span class="w-4">
              {{ 'icon-plus.svg' | inline_asset_content }}
            </span>
          </div>
        {% endfor %}
      </div>
    </div>

    <div class="bg-black text-white text-[14px] hidden lg:block">
      <div class="max-w-7xl md:grid md:grid-cols-4 gap-8">
        <div>
          <ul class="space-y-2">
            <li><a href="#" class="hover:underline">Mens</a></li>
            <li><a href="#" class="hover:underline">Womens</a></li>
            <li><a href="#" class="hover:underline">Accessories</a></li>
            <li><a href="#" class="hover:underline">Gift Card</a></li>
            <li><a href="#" class="hover:underline">Sign up for 10% off</a></li>
          </ul>
        </div>

        <div>
          <ul class="space-y-2">
            <li><a href="#" class="hover:underline">Contact Us</a></li>
            <li><a href="#" class="hover:underline">Careers</a></li>
            <li><a href="#" class="hover:underline">About Blakely</a></li>
            <li><a href="#" class="hover:underline">Blakely Community</a></li>
            <li><a href="#" class="hover:underline">Events</a></li>
            <li><a href="#" class="hover:underline">APEX Games</a></li>
            <li><a href="#" class="hover:underline">Press</a></li>
          </ul>
        </div>

        <div>
          <ul class="space-y-2">
            <li><a href="#" class="hover:underline">Delivery & Returns</a></li>
            <li><a href="#" class="hover:underline">Track Parcel</a></li>
            <li><a href="#" class="hover:underline">Klarna</a></li>
            <li><a href="#" class="hover:underline">FAQs</a></li>
            <li><a href="#" class="hover:underline">Influencers</a></li>
            <li><a href="#" class="hover:underline">Student Ambassadors</a></li>
          </ul>
        </div>

        <div>
          <ul class="space-y-2">
            <li><a href="#" class="hover:underline">Privacy Policy</a></li>
            <li><a href="#" class="hover:underline">Terms & Conditions</a></li>
            <li><a href="#" class="hover:underline">Cookie Policy</a></li>
            <li><a href="#" class="hover:underline">Site Map</a></li>
          </ul>
        </div>
      </div>
    </div>

    <div class="w-[230px] flex flex-col gap-[20px]">
      <a class="fill-white">
        {{ 'icon-logo-blackely-white' | append: icon | append: '.svg' | inline_asset_content }}
      </a>
      <div class="flex items-center justify-center lg:justify-start gap-4 bg-black py-4">
        {% assign socials = 'insta,facebook,x,linkedin,tiktok,youtube' | split: ',' %}
        {% assign links = 'https://instagram.com,https://facebook.com,https://x.com,https://linkedin.com,https://tiktok.com,https://youtube.com'
          | split: ','
        %}
        {% for icon in socials %}
          <a href="{{ links[forloop.index0] }}" target="_blank" rel="noopener noreferrer" class="w-6 h-6 block">
            <img
              src="{{ 'icon-logo-' | append: icon | append: '.svg' | asset_url }}"
              alt="{{ icon | capitalize }}"
              class="w-full h-full object-contain"
              width=""
              height=""
            >
          </a>
        {% endfor %}
      </div>
    </div>
  </div>

  <div>
    <div class="flex flex-col gap-[20px] lg:flex-row lg:justify-between lg:mt-[60px]">
      <div>
        <p class="max-lg:text-center text-[12px]">Copyright Blakely Clothing 2024 | All rights reserved</p>
        <ul class="flex gap-[16px] mt-[10px] justify-center lg:justify-start" role="list">
          {%- for type in shop.enabled_payment_types -%}
            <li>
              {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
            </li>
          {%- endfor -%}
        </ul>
      </div>

      <div class="flex flex-col lg:flex-row items-center gap-[20px] text-[14px]">
        <span class="whitespace-nowrap">Â£ GBP</span>
        <span class="whitespace-nowrap flex items-center gap-1">
          UNITED KINGDOM
          <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3" viewBox="0 0 24 24" fill="currentColor">
            <path d="M7 10l5 5 5-5H7z"/>
          </svg>
        </span>
        <span class="whitespace-nowrap">ENGLISH</span>
      </div>
    </div>
  </div>
</footer>
